                                <div class="post-content">
                                    <div class="post-header"><a href="#">@Model.Article.Title</a></div>
                                    <div class="post-details">
                                        <div class="post-date">@String.Format("{0:d MMM, yyyy }", Model.Article.Created_Date)</div>
                                        <div class="seperator">/</div>
                                        <div class="post-category"><a href="#">@Model.Article.Category.Category_Name</a></div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <hr />
                                    <div class="post-briefly-text">
                                        @Model.Article.Post_Content
                                    </div>
                                    <div class="post-continue">

                                    </div>
                                    <div class="post-tags">
                                        @{
                                            string[] a = Model.Article.Tags.Split(',');
                                        }
                                        @foreach (var tag in a)
                                        {
                                            if (tag != "" && tag != " ")
                                            {
                                                <span class="label label-default"><a href="@Url.Action("Tags/"+tag,"Home")">@tag</a></span>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
